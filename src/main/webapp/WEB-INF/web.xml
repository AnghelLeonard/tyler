<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <!--<param-value>afterwork</param-value>-->
        <param-value>bluesky</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <context-param>
        <param-name>primefaces.FONT_AWESOME</param-name>
        <param-value>true</param-value>
    </context-param>
    <mime-mapping>
        <extension>eot</extension>
        <mime-type>application/vnd.ms-fontobject</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>otf</extension>
        <mime-type>font/opentype</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>svg</extension>
        <mime-type>image/svg+xml</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>ttf</extension>
        <mime-type>application/x-font-ttf</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/x-font-woff</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>application/x-font-woff2</mime-type>
    </mime-mapping>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
        <!--<welcome-file>control/scheduled.xhtml</welcome-file>-->
    </welcome-file-list>

    <!--configure a common error page for all exceptions-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error/error.xhtml</location>
    </error-page>

    <security-constraint>
        <display-name>Users-Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>ITR Home Page</web-resource-name>
            <description>All users that are login can access these pages</description>
            <url-pattern>/control/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable access to userRole and adminRole</description>
            <role-name>userRole</role-name>
            <role-name>adminRole</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Admin-Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Admin Home Page</web-resource-name>
            <description>This page can be accessed only by the admin</description>
            <url-pattern>/control/control.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable access only to adminRole</description>
            <role-name>adminRole</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>itr-realm</realm-name>
        <form-login-config>
            <form-login-page>/login/login.xhtml</form-login-page>
            <form-error-page>/login/ops.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>All ITR users are in this role</description>
        <role-name>userRole</role-name>
    </security-role>
    <security-role>
        <description>The ITR admin is in this role</description>
        <role-name>adminRole</role-name>
    </security-role>

</web-app>
